<!DOCTYPE html>
<html lang="en">
<!-- Include Head -->
<%- include('./partials/head', {title: 'Creación de Producto'}) %>
<body>
	<!-- Header -->
	<%- include('./partials/header') %>
	<!-- /Header -->

	<div class="container products-wrapper">
				<h2 class="products-title">Formulario de creación de productos</h2>
		</div>
		<div class="">
			<form action="/products" method="POST" enctype="multipart/form-data">
				<div >
					<div class="">
						<label for="name" class="">Nombre del producto:</label>
						<input type="text" id="name" name="name" placeholder="Ej: Pizza 'cuatro quesos'" class="form-input">
					</div>
					<div class="">
						<label for="price" class="">Precio del producto:</label>
						<input type="text" id="price" name="price" placeholder="Ej: $3000" class="form-input">
					</div>
					<!-- <div class="">
						<label for="discount" class="">Descuento:</label>
						<input type="text" id="discount" name="discount" placeholder="Ej: 15" class="form-input">
					</div> -->
					<div class="">
						<label for="category" class="">Categoría:</label>
						<select name="category" id="category" class="form-input">
							<% allCategory.forEach(category => { %>
								<option value="<%= category.id %>"><%= category.label %></option>
								<% }); %>
						</select>
					</div>
					<div class="">
						<label for="description" class="form-label">Descipción:</label>
						<textarea name="description" id="description" class=""></textarea>
					</div>
					<div class="">
						<label for="image" class="">Imagen del producto:</label>
						<input type="file" id="image" name="image">
					</div>
					<div class="">
						<button type="submit" class="buy-now-button">Guardar producto</button>
					</div>
				</div>
			</form>
		</div>

	</div>

	<!-- footer -->
	<%- include('./partials/footer') %>
	<!-- /footer -->
</body>	
</html>