<!DOCTYPE html>
<html lang="en">
    <%- include('partials/head', {title: "Inicio"} ) %>
<body>
    <%- include('partials/header') %>
    <div class="banner">
        <div class="banner-slide"><img src="/img/img-prueba-1.jpg" alt="Imagen 1"></div>
        <div class="banner-slide"><img src="/img/img-prueba-2.jpg" alt="Imagen 2"></div>    
    </div>
    <div class="subtitulo">
        <h2>Carta</h2>
    </div>
    <section id="menu">                
         <div class="menu-list">          
            <div class="pizza-item" data-index="0">
                <a href="/products/productDetail">

                
            </div>
           
        </div>
        <h2 class="subtitulo">Basado en tu última visita</h2>
    </div>

    <!-- Show the "visited" products -->
    <% for (product of products) { %>
        <div>
            <section>
                <a href="/products/productDetail<%= product.id %>">
                    <figure class="product-box_image">
                        <img src="/img/products/<%= product.image %>" alt="imagen de producto">
                    </figure>
                    <article >
                        <h2>$<%= product.price %></h2>
                        <% if (product.discount > 0) {%>
                            <span><%= product.discount %>% OFF</span>
                        <% } %>
                        <p><%= product.name %></p>
                        <i class="fas fa-truck"></i>
                    </article>
                </a>
            </section>
        </div>
        <% } %>
    <a class="details-button" href="/productDetail">Ver detalles del producto</a>
    <a class="add-to-cart-button" href="/productCart">Agregar al Carrito</a> 
</div>
</div>
<!-- /ultima visita -->

<!-- Ofertas -->
<div class="container products-wrapper">
<div class="row">
    <div class="col-12">
        <h2>Ofertas</h2>
    </div>
    <!-- Show the "in-sale" products -->
    <% for (product of products) { %>
        <% if (product.category == "in-sale") { %>
    <div>
        <section >
            <a href="/products/detail/<%= product.id%>">
                <figure>
                    <img src="/images/products/<%= product.image%>" alt="imagen de producto">
                </figure>
                <article>
                    <h2>$<%= toThousand(product.price)%></h2>
                    <% if (product.discount > 0) {%>
                        <span><%= product.discount%>% OFF</span>
                    <% } %>
                    <p><%= product.name%></p>
                    <i class="fas fa-truck"></i>
                </article>
            </a>
        </section>
        
    </div>
    <% } %>
    <% } %>
</div>
          
    </section>
    <div class="subtitulo">
        <h2>Galería</h2>
    </div>     
    <div class="gallery">        
        <img src="/img/img-prueba-1.jpg" alt="Foto 1">
        <img src="/img/img-prueba-2.jpg" alt="Foto 2">       
    </div>
    <%- include('partials/footer') %>
</body>
</html>