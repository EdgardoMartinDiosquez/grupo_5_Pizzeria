            <figure>
                <img src="/img/users/<%= user.avatar%>" alt="" width="100">
            </figure>
        </div>
        <div >
            <h3><%=  user.firstName %> <%= user.lastName %></h3>
            <%  if (user.typeId) {  %>
                <p>Categor√≠a: <%=  user.typeId %></p>
            <% }  %>
            <p>Email: <a href="<%= user.email%>" target="_blank"><%= user.email  %></a></p>
